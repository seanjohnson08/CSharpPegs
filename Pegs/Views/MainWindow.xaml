<Window x:Class="Pegs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pegs"
        mc:Ignorable="d"
        Title="Pegs" Height="300" Width="300">
    <DockPanel>
        <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem x:Name="NewGameBtn" Header="New Game" Click="NewGameBtn_Click"/>
        </Menu>
        <Viewbox>
            <Grid x:Name="MainView" MinWidth="300" MinHeight="300"/>
        </Viewbox>
    </DockPanel>
</Window>
