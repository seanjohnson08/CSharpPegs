<Window x:Class="Pegs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pegs"
        mc:Ignorable="d"
        Title="Pegs" Height="300" Width="300">
    <DockPanel>
        <Menu VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem x:Name="NewGameBtn" Header="New Game">
                <MenuItem x:Name="TriangleGameBtn" Header="Triangle" HorizontalAlignment="Left" Click="TriangleGameBtn_Click"/>
                <MenuItem x:Name="CrossGameBtn" Header="Cross" HorizontalAlignment="Left" Click="CrossGameBtn_Click"/>
            </MenuItem>
        </Menu>
        <Viewbox>
            <ContentPresenter x:Name="MainView" MinWidth="300" MinHeight="300">

            </ContentPresenter>
        </Viewbox>
    </DockPanel>
</Window>
